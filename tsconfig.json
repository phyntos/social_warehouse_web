{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl": "./",
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "src/**/*",
        "webpack.common.ts"
    ]
}